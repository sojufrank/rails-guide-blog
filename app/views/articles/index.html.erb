<h1>Listing of Articles</h1>
<%= link_to 'Click here to create new article', new_article_path %></br>
<table>
  <tr>
    <th class="th">Title</th>
    <th class="th">Text</th>
    <th colspan="3"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td class="button"><%= article.title %></td><p> </p>
      <td class="button"><%= article.text %></td>
      <td class="button"><%= link_to '[Show]', article_path(article) %></td>
      <td class="button"><%= link_to '[Edit]', edit_article_path(article) %></td>
      <td class="button"><%= link_to '[Destroy]', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      </div>

    </tr>
  <% end %>
</table>